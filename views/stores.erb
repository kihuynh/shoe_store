<div class="container">
  <a href="/">Back</a>
  <h1>Shoe Love</h1>
  <h3><%= @store.name %></h3>
  <div class="row">
    <div class="col-md-6">
      <div class="form1s">
        <h3>Edit Store Name</h3>
        <div class="form1">
          <form action="/stores/<%= @store.id %>" method="post">
            <input name="_method" type="hidden" value="patch">
            <label for="store_name">Edit store name</label>
            <input type="text" name="store_name">
            <button type="submit" class="btn">Update</button>
          </form>
          <br>
          <form action="/stores/<%= @store.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn-danger">DELETE</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Brands In Store</h3>
      <% if @store.brands.any? %>
        <ul>
          <% @store.brands.each do |brand| %>
          <li><%= brand.name %>, $<%= brand.price %></li>
          <% end %>
        </ul>
        <% else %>
        <p>There are currently no shoes being sold in store</p>
        <% end %>
    </div>
  </div>
</div>
