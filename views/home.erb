<div class="container">
  <div class="titles">
    <h1>Shoe Love</h1>
    <h3>It's For The Love Of Shoes</h3>
    <p id="welcome">Welcome to the Shoe Love Database</p>
  </div>
  <div class="row" id="centerbtns">
      <a href="/stores"><button type="submit" class="btn btn-primary addbuttons">Add New Stores</button></a>
      <a href="/brands"><button type="submit" class="btn btn-primary addbuttons">Add New Shoe Brands</button></a>
  </div>
  <div class="row" id="homelist">
    <div class="col-md-6">
      <h3 class="listtitle">Our current stores</h3>
      <% if @stores.any? %>
      <ul>
        <% @stores.each do |store| %>
        <li>
          <a href="/stores/<%= store.id %>"> <%= store.name %> </a>
        </li>
          <% end %>
      </ul>
        <% else %>
        <p>Currently there are no stores.</p>
        <% end %>
    </div>
    <div class="col-md-6">
      <h3 class="listtitle">Shoe Brands</h3>
      <% if @brands.any? %>
      <ul>
        <% @brands.each do |brand| %>
        <li>
          <a href="/brands/<%= brand.id %>"> <%= brand.name %> </a>
        </li>
          <% end %>
        </ul>
          <% else %>
          <p>Currently there are no brands.</p>
          <% end %>
    </div>
  </div>
</div>
